<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    >



<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:background="@color/primaryLightColor"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:id="@+id/relativeLayout">
        <Button
            android:id="@+id/buttonCalendar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/calendar_icon"

            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="56dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/exercise_icon"

            android:layout_marginLeft="34dp"
            android:layout_marginStart="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/train_icon"

            android:layout_marginEnd="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercises"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignRight="@+id/buttonCalendar"
            android:layout_alignEnd="@+id/buttonCalendar" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workouts"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5" />

</RelativeLayout>

    <ImageView
        android:id="@+id/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/new_ground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_above="@+id/relativeLayout" />

    <TextView
        android:id="@+id/quoteText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"

        android:textColor="#ffa0"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="67dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
